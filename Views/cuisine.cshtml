<head>
  <link href="../Content/CSS/bootstrap.css" rel="stylesheet">
  <link href="../Content/CSS/styles.css" rel="stylesheet">
  <meta charset="utf-8">
</head>
<body>
<h2>Here are all the restaurants in this cuisine</h2>

@if (@Model["restaurants"].Count == 0)
{
  <p>No restaurants have been added yet</p>
}
else
{
  <ol>
  @foreach (var restaurant in @Model["restaurants"])
    {
    <li>@restaurant.GetName()</li>
    }
  </ol>
}
<p><a href = "/restaurants/new">Add a new restaurant</a></p>
<p><a href="/reviews/new">Add a new review</a></p>
<h4><a href="/search">search the cuisine you like</a></h4>
<p><a href = "/">Return home</a></p>
</body>
