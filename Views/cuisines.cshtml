<head>
  <link href="Content/CSS/bootstrap.css" rel="stylesheet">
  <link href="Content/CSS/styles.css" rel="stylesheet">
  <meta charset="utf-8">
</head>
<body>
<h1>All Cuisines</h1>
@if (@Model.Count == 0)
{
  <p>No cuisines yet</p>
}
<ul>
  @foreach (var cuisine in Model)
  {
  <li><a href = "/cuisines/@cuisine.GetId()">@cuisine.GetCuisine()</a></li>
  }
</ul>
<br><br>
<a href = "/cuisines/new">Add new cuisine</a>
<p><a href="/restaurants/new">Add a restaurant to cuisine type</a></p>
<form action="/cuisines/delete" method="post">
  <button type="submit" class="btn btn-danger">Clear all cuisines</button>
</form>
<p><a href = "/">Return home</a></p>
</body>
